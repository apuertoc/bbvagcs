		<script type="text/javascript" src="https://bbvagcs.googlecode.com/svn/trunk/bbcode2html.js"></script>

		<script type="text/javascript">
			var html="";
			// Obtener userprefs
			var prefs = new gadgets.Prefs();
			var VarComent=prefs.getString("VarComent");
			var VarBorde="0";
			var VarAlign="left";
			var VarColorFondo="transparent";
			var VarColorLetra=prefs.getString("VarColorLetra");
			var VarColorBorde="#fff";
			var VarSize=prefs.getString("VarSize");
			var VarImagenFondo="Neutro";
			switch(VarImagenFondo)
			{
				case "Neutro": document.getElementById('content_div').style.backgroundImage="url('https://bbvagcs.googlecode.com/svn/trunk/fondocajetinunmedio.png')"; break;
				case "Amarillo": document.getElementById('content_div').style.backgroundImage="url('https://bbvagcs.googlecode.com/svn/trunk/fondocajetinunmedio.png')"; break;
				case "Verde": document.getElementById('content_div').style.backgroundImage="url('https://bbvagcs.googlecode.com/svn/trunk/fondocajetinunmedio.png')"; break;
				case "Azul": document.getElementById('content_div').style.backgroundImage="url('https://bbvagcs.googlecode.com/svn/trunk/fondocajetinunmedio.png')"; break;    	
				case "None": document.getElementById('content_div').style.backgroundImage="none"; break;    	
				default: document.getElementById('content_div').style.backgroundImage="url('https://bbvagcs.googlecode.com/svn/trunk/fondocajetinunmedio.png')"; break;
			}
			document.body.style.backgroundColor="#fff";// VarFondoGadget;			
			html+='<table style="border-style: none;';			
			html+='"';				
			html+=" width=100%>";
			html+='<tr><td>';  
			html+='<div style="padding: 20px; font-size:';
			html+=VarSize;
			html+='; color:';
			html+=VarColorLetra;
			html+=';">';
			html+=bbcode2html(VarComent);
			html+="</div>";
			html+='</td></tr></table>';
			document.getElementById("content_div").innerHTML = html;
			gadgets.window.adjustHeight();
		</script>
	]]>  
	</Content>  
