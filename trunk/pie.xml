				display:none;
			}
			h2.titulobloque {
				font-size: 16px;
				margin: 0 0 10px 0;
				color: #3F78B2;
			}
			a.enlaceEnlace {
				background-image: url("https://bbvagcs.googlecode.com/svn/trunk/fondoEnlaceuntercio.png");
				background-repeat: no-repeat;
				color: #FFFFFF;
				display: block;
				float: right;
				font-size: 12px;
				font-weight: bold;
				height: 31px;
				margin: 0px;
				padding-top: 10px;
				text-align: center;
				text-decoration: none;
				width: 165px;
			}
			.margintop {
				margin-top: 7px !important;
			}
			
		</style>
	
		<div id="content_div"  style="height:180px; "></div>

		

		<script type="text/javascript">
			var html="";
			// Obtener userprefs
			var prefs = new gadgets.Prefs();			
			var VarBorde="0";
			var VarAlign="left";
			var VarColorFondo="transparent";
			var VarColorLetra=prefs.getString("VarColorLetra");
			var VarColorBorde="#fff";
			var VarSize=prefs.getString("VarSize");
			
			var VarEnlace1Texto=prefs.getString("VarEnlace1Texto");
			var VarEnlace1URL=prefs.getString("VarEnlace1URL");
			var VarEnlace2Texto=prefs.getString("VarEnlace2Texto");
			var VarEnlace2URL=prefs.getString("VarEnlace2URL");
			var VarEnlace3Texto=prefs.getString("VarEnlace3Texto");
			var VarEnlace3URL=prefs.getString("VarEnlace3URL");
			var VarEnlace4Texto=prefs.getString("VarEnlace4Texto");
			var VarEnlace4URL=prefs.getString("VarEnlace4URL");
			var VarEnlace5Texto=prefs.getString("VarEnlace5Texto");
			var VarEnlace5URL=prefs.getString("VarEnlace5URL");
			
			function insertarEnlace()
			{
				var html="";
				if ((VarEnlace1Texto!="")&&(VarEnlace1URL!=""))
				{
					html+='<a href=\"' + VarEnlace1URL + '\" title=\"' + VarEnlace1Texto + '\" target=\"_parent\" class=\"enlaceEnlace margintop\">' + VarEnlace1Texto + '</a>';
				}
				if ((VarEnlace2Texto!="")&&(VarEnlace2URL!=""))
				{
					html+='<a href=\"' + VarEnlace2URL + '\" title=\"' + VarEnlace2Texto + '\" target=\"_parent\" class=\"enlaceEnlace\">' + VarEnlace2Texto + '</a>';
				}
				if ((VarEnlace3Texto!="")&&(VarEnlace3URL!=""))
				{
					html+='<a href=\"' + VarEnlace3URL + '\" title=\"' + VarEnlace3Texto + '\" target=\"_parent\" class=\"enlaceEnlace\">' + VarEnlace3Texto + '</a>';
				}
				return html;
			}
						
			document.body.style.backgroundColor="#fff";			
			html+='<table style=\"border-style: none;\" width=\"100%\">';
			html+='<tr><td>';  
			html+='<div style=\"padding: 10px; font-size:' + VarSize + '; color:' + VarColorLetra + ';\">';					
			html+=insertarEnlace();			
			html+='</div>';
			html+='</td></tr></table>';
			document.getElementById("content_div").innerHTML = html;
			gadgets.window.adjustHeight();
		</script>
	]]>  
	</Content>  
